FILE*fichier=fopen("projet.c","r");
FILE*zone_enregistrement=fopen("enregistrement.c","a+");
int récupérateur_piocheprincipale;
void demandeur_sauvegarde(){
	do{
	char a;
	printf("Voulez vous sauvegarder? O pour oui ou N pour non:")
	scanf(" %c",&a);
	}while (a != 'O' && a != 'o' && a != 'n' && a != 'N');
	if (a =='n' || a=='N'){
		exit(1);
	}
	else{
	printf("Début du processus de sauvegarde");
	}
	}
	void principale_deck_save(){
	int *pioche_principale=calloc(n,sizeof(int))
