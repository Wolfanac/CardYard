	récupérateur_piocheprincipale=0;
	while(fscanf(fichier,"%d",&a)==1){
		pioche_principale[i]=récupérateur_piocheprincipale;
		i++;
		fprintf(zone_enregistrement,"%d",pioche_principale[i]);
